<%= form_tag('/session', method: :post) do %>


    <%= label_tag(:name, "Your name:") %>

    <%= collection_select(:player, :name, Player.all, :name, :name, prompt: "Please select your username from this dropdown") %>



    <%= label_tag(:password, "Your password:") %>
    <%= password_field_tag(:password) %>



    <%= submit_tag("Sign In") %>


<% end %>
