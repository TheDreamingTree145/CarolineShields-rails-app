<% if flash[:alert] %>
  <div style="color:red">
    <%= flash[:alert] %><br>
  </div>
  <% end %><br>

<%= form_tag('/login') do %>


    <%= label_tag(:name, "Your name:") %><br>

    <%= collection_select(:player, :name, Player.all, :name, :name, prompt: "Please select your username from this dropdown") %><br>



    <%= label_tag(:password, "Your password:") %><br>
    <%= password_field_tag(:password) %><br>



    <%= submit_tag("Log In") %><br><br>

Don't have an account, <a href="/signup">create one here</a> <br><br>

<% end %>
